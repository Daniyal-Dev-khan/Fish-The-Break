                    app:layout_constraintEnd_toEndOf="@id/layoutViewSearchDetailsInner"
                    app:layout_constraintTop_toTopOf="@id/layoutViewSearchDetailsInner"
                    app:shapeAppearanceOverlay="@style/ImageCircleTheme"

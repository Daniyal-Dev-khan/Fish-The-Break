<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        tools:context=".screens.bottom_sheets.group.GroupOptionBottomSheet">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_rounded_16_bottom_sheet"
            android:layout_marginHorizontal="@dimen/_8sdp"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvEditGroup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/edit_group"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/smoky_black"
                android:gravity="center"
                android:paddingTop="@dimen/_14sdp"
                android:paddingBottom="@dimen/_13sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="0.33dp"
                android:background="@color/bottom_sheet_divider"
                app:layout_constraintTop_toBottomOf="@id/tvEditGroup"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvDeleteGroup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/delete_group"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/sunset_orange"
                android:gravity="center"
                android:paddingTop="@dimen/_14sdp"
                android:paddingBottom="@dimen/_13sdp"
                app:layout_constraintTop_toBottomOf="@id/divider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="@dimen/_11ssp"
            android:textColor="@color/smoky_black"
            android:gravity="center"
            android:paddingTop="@dimen/_14sdp"
            android:paddingBottom="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/bg_cancel_rounded"
            android:layout_marginHorizontal="@dimen/_8sdp"
            app:layout_constraintTop_toBottomOf="@id/topLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>